{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "LaCoN",
  "patterns": [
    { "include": "#comments" },
    { "include": "#escapes" },
    { "include": "#unicode_escape" },
    { "include": "#multiple_keys" },
    { "include": "#strings_quoted" },
    { "include": "#multiline_strings" },
    { "include": "#arrays" }, 
    { "include": "#keywords_variable" },
    { "include": "#keywords_special" },
    { "include": "#keywords_bool" },
    { "include": "#main_keys" },
    { "include": "#dict_pointer" },
    { "include": "#numeric_units" },
    { "include": "#numbers" },
    { "include": "#hex_numbers" },
    { "include": "#assignment_key" },
    { "include": "#math_operators" },
    { "include": "#unquoted_strings" },
    { "include": "#operators" }
  ],
  "repository": {
    "arrays": {
      "patterns": [
        {
          "name": "meta.structure.array.lacon",
          "begin": "\\[",
          "beginCaptures": {
            "0": { "name": "punctuation.section.brackets.lacon" }
          },
          "end": "\\]",
          "endCaptures": {
            "0": { "name": "punctuation.section.brackets.lacon" }
          },
          "patterns": [
            { "include": "#comments" },
            { "include": "#unicode_escape" },
            { "include": "#strings_quoted" },
            { "include": "#keywords_variable" },
            { "include": "#keywords_special" },
            { "include": "#keywords_bool" },
            { "include": "#numeric_units" },
            { "include": "#numbers" },
            {
              "name": "punctuation.separator.array.lacon",
              "match": ","
            },
            {
              "comment": "Элементы массива без кавычек (белый текст)",
              "match": "([^\\s\\[\\]{}()=,//\"]+(?:\\\\.[^\\s\\[\\]{}()=,//\"]*)*)",
              "captures": {
                "1": {
                  "name": "meta.embedded.lacon",
                  "patterns": [
                    { "include": "#unicode_escape" },
                    {
                      "name": "constant.character.escape.lacon",
                      "match": "\\\\."
                    }
                  ]
                }
              }
            }
          ]
        }
      ]
    },
    "escapes": {
      "patterns": [
        {
          "name": "constant.character.escape.lacon",
          "match": "\\\\."
        }
      ]
    },
    "unicode_escape": {
      "name": "constant.character.escape.unicode.lacon",
      "begin": "\\\\u\\{",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.escape.begin.lacon" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.definition.escape.end.lacon" }
      },
      "patterns": [
        {
          "name": "constant.numeric.hex.lacon",
          "match": "[0-9a-fA-F]+"
        }
      ]
    },
    "main_keys": {
      "patterns": [
        {
          "name": "entity.name.function.lacon",
          "match": "^\\s*\\b([\\p{L}_][\\p{L}0-9_-]*)\\b(?=\\s|$|\\{|>|\\()"
        }
      ]
    },
    "multiple_keys": {
      "patterns": [
        {
          "comment": "Multiple keys with assignment [key, key] =",
          "begin": "^\\s*\\[(?=[^\\]]*\\]\\s*=)",
          "end": "\\]",
          "beginCaptures": {
            "0": { "name": "punctuation.section.brackets.lacon" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.section.brackets.lacon" }
          },
          "patterns": [
            {
              "name": "entity.other.attribute-name.lacon",
              "match": "[\\p{L}0-9_-]+"
            },
            {
              "name": "punctuation.separator.lacon",
              "match": ","
            }
          ]
        },
        {
          "comment": "Multiple keys with space [key, key] value",
          "begin": "^\\s*\\[(?=[^\\]]*\\]\\s+[^=])",
          "end": "\\]",
          "beginCaptures": {
            "0": { "name": "punctuation.section.brackets.lacon" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.section.brackets.lacon" }
          },
          "patterns": [
            {
              "name": "entity.name.function.lacon",
              "match": "[\\p{L}0-9_-]+"
            },
            {
              "name": "punctuation.separator.lacon",
              "match": ","
            }
          ]
        }
      ]
    },
    "dict_pointer": {
      "patterns": [
        {
          "name": "keyword.operator.navigation.lacon",
          "match": ">"
        },
        {
          "name": "entity.name.function.lacon",
          "match": "(?<=>)\\s*\\b([\\p{L}0-9_-]+)\\b"
        }
      ]
    },
    "assignment_key": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.lacon",
          "match": "\\b[\\p{L}0-9_-]+(?=\\s*=)"
        }
      ]
    },
    "comments": {
      "patterns": [
        { "include": "#comment_embedded" },
        {
          "name": "comment.block.documentation.lacon",
          "begin": "/\\*\\*",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.lacon" }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.lacon" }
          },
          "patterns": [
            {
              "name": "storage.type.class.jsdoc.lacon",
              "match": "@(param|returns?|type|description|example|author|version|since|todo)\\b"
            },
            {
              "name": "variable.other.jsdoc.lacon",
              "match": "(?<=@param\\s+)[\\p{L}_][\\p{L}0-9_-]*"
            }
          ]
        },
        { 
          "name": "comment.line.double-slash.lacon", 
          "match": "//.*$" 
        },
        { 
          "name": "comment.block.lacon", 
          "begin": "/\\*", 
          "end": "\\*/" 
        }
      ]
    },
    "comment_embedded": {
      "patterns": [
        {
          "begin": "/\\*\\*\\s*(json|JSON)\\s*$",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.lacon" },
            "1": { "name": "storage.type.class.jsdoc.lacon" }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.lacon" }
          },
          "contentName": "meta.embedded.block.json",
          "patterns": [{ "include": "source.json" }]
        },
        {
          "begin": "/\\*\\*\\s*(javascript|js|JavaScript|JS)\\s*$",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.lacon" },
            "1": { "name": "storage.type.class.jsdoc.lacon" }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.lacon" }
          },
          "contentName": "meta.embedded.block.javascript",
          "patterns": [{ "include": "source.js" }]
        },
        {
          "begin": "/\\*\\*\\s*(typescript|ts|TypeScript|TS)\\s*$",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.lacon" },
            "1": { "name": "storage.type.class.jsdoc.lacon" }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.lacon" }
          },
          "contentName": "meta.embedded.block.typescript",
          "patterns": [{ "include": "source.ts" }]
        },
        {
          "begin": "/\\*\\*\\s*(python|py|Python)\\s*$",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.lacon" },
            "1": { "name": "storage.type.class.jsdoc.lacon" }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.lacon" }
          },
          "contentName": "meta.embedded.block.python",
          "patterns": [{ "include": "source.python" }]
        },
        {
          "begin": "/\\*\\*\\s*(css|CSS)\\s*$",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.lacon" },
            "1": { "name": "storage.type.class.jsdoc.lacon" }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.lacon" }
          },
          "contentName": "meta.embedded.block.css",
          "patterns": [{ "include": "source.css" }]
        },
        {
          "begin": "/\\*\\*\\s*(html|HTML)\\s*$",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.lacon" },
            "1": { "name": "storage.type.class.jsdoc.lacon" }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.lacon" }
          },
          "contentName": "meta.embedded.block.html",
          "patterns": [{ "include": "text.html.basic" }]
        },
        {
          "begin": "/\\*\\*\\s*(xml|XML)\\s*$",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.lacon" },
            "1": { "name": "storage.type.class.jsdoc.lacon" }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.lacon" }
          },
          "contentName": "meta.embedded.block.xml",
          "patterns": [{ "include": "text.xml" }]
        },
        {
          "begin": "/\\*\\*\\s*(yaml|yml|YAML)\\s*$",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.lacon" },
            "1": { "name": "storage.type.class.jsdoc.lacon" }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.lacon" }
          },
          "contentName": "meta.embedded.block.yaml",
          "patterns": [{ "include": "source.yaml" }]
        },
        {
          "begin": "/\\*\\*\\s*(sql|SQL)\\s*$",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.lacon" },
            "1": { "name": "storage.type.class.jsdoc.lacon" }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.lacon" }
          },
          "contentName": "meta.embedded.block.sql",
          "patterns": [{ "include": "source.sql" }]
        },
        {
          "begin": "/\\*\\*\\s*(markdown|md|Markdown)\\s*$",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.lacon" },
            "1": { "name": "storage.type.class.jsdoc.lacon" }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.lacon" }
          },
          "contentName": "meta.embedded.block.markdown",
          "patterns": [{ "include": "text.html.markdown" }]
        },
        {
          "begin": "/\\*\\*\\s*(regex|regexp|RegEx)\\s*$",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.lacon" },
            "1": { "name": "storage.type.class.jsdoc.lacon" }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.lacon" }
          },
          "contentName": "meta.embedded.block.regex",
          "patterns": [{ "include": "source.regexp" }]
        },
        {
          "begin": "/\\*\\*\\s*(shell|bash|sh)\\s*$",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.lacon" },
            "1": { "name": "storage.type.class.jsdoc.lacon" }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.lacon" }
          },
          "contentName": "meta.embedded.block.shell",
          "patterns": [{ "include": "source.shell" }]
        }
      ]
    },
    "keywords_variable": {
      "patterns": [
        { 
          "name": "storage.type.lacon", 
          "match": "(?<!\\\\)\\$[\\p{L}_](?:[\\p{L}0-9._-]*[\\p{L}0-9_])?"
        }
      ]
    },
    "keywords_special": {
      "patterns": [
        { 
          "name": "keyword.control.lacon", 
          "match": "\\b(none|auto)\\b" 
        }
      ]
    },
    "keywords_bool": {
      "patterns": [
        { 
          "name": "constant.language.boolean.lacon", 
          "match": "\\b(true|false|value)\\b" 
        }
      ]
    },
    "math_operators": {
      "patterns": [
        {
          "name": "keyword.operator.lacon",
          "match": "(?<![\\p{L}0-9_])(?:\\+|\\-|\\*|/|%|\\^|×|÷|⋅|−|±|√|∛|∜|∶)(?![\\p{L}0-9_])"
        }
      ]
    },
    "numeric_units": {
      "patterns": [
        {
          "name": "constant.numeric.lacon",
          "match": "-?\\d+(\\.\\d+)?(mm|cm|pt|in|deg|em|rem|%|fr|rad)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        { 
          "name": "constant.numeric.lacon", 
          "match": "\\b-?\\d+(\\.\\d+)?\\b" 
        }
      ]
    },
    "hex_numbers": {
      "patterns": [
        { 
          "name": "constant.numeric.lacon", 
          "match": "\\b0[xX][0-9a-fA-F]+\\b" 
        }
      ]
    },
    "strings_quoted": {
      "patterns": [
        {
          "name": "string.quoted.double.lacon",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "include": "#keywords_variable" },
            { "include": "#unicode_escape" },
            { 
              "name": "constant.character.escape.lacon", 
              "match": "\\\\." 
            }
          ]
        }
      ]
    },
    "multiline_strings": {
      "patterns": [
        {
          "comment": "Свободные строки @( ... )",
          "begin": "(@)(\\()",
          "beginCaptures": {
            "1": { "name": "punctuation.section.brackets.lacon" },
            "2": { "name": "punctuation.section.brackets.lacon" }
          },
          "end": "(\\))",
          "endCaptures": {
            "1": { "name": "punctuation.section.brackets.lacon" }
          },
          "patterns": [
            { "include": "#keywords_variable" },
            { "include": "#unicode_escape" },
            {
              "comment": "Текст без цвета строк (белый)",
              "name": "meta.embedded.lacon", 
              "match": "[^)$]+"
            }
          ]
        },
        {
          "comment": "Строгие строки ( ... )",
          "begin": "(\\()",
          "beginCaptures": {
            "1": { "name": "punctuation.section.brackets.lacon" }
          },
          "end": "(\\))",
          "endCaptures": {
            "1": { "name": "punctuation.section.brackets.lacon" }
          },
          "patterns": [
            { "include": "#strings_quoted" },
            { "include": "#keywords_variable" },
            { "include": "#unicode_escape" },
            { "name": "punctuation.separator.lacon", "match": "," }
          ]
        }
      ]
    },
    "unquoted_strings": {
      "patterns": [
        {
          "comment": "Value after =",
          "match": "(?<==)\\s*([^\\s\\[\\]{}()=,//\\$]+(?:\\\\.[^\\s\\[\\]{}()=,//\\$]*)*)",
          "captures": {
            "1": {
              "patterns": [
                { "include": "#unicode_escape" },
                { "name": "constant.character.escape.lacon", "match": "\\\\." }
              ]
            }
          }
        },
        {
          "comment": "Standalone values/strings",
          "match": "(?<=^|\\s)(?![a-zA-Z0-9_-]+=)([^\\s\\[\\]{}()=,//\"\\$]+(?:\\\\.[^\\s\\[\\]{}()=,//\"\\$]*)*)",
          "captures": {
            "1": {
              "patterns": [
                { "include": "#unicode_escape" },
                { "name": "constant.character.escape.lacon", "match": "\\\\." }
              ]
            }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        { 
          "name": "keyword.operator.assignment.lacon", 
          "match": "=" 
        },
        { 
          "name": "punctuation.section.brackets.lacon", 
          "match": "[\\[\\]{}()]" 
        }
      ]
    }
  },
  "scopeName": "source.lacon"
}